<Window x:Class="WPF_LB_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LB_5"
        mc:Ignorable="d"
        Title="Регистрация сотрудников" Height="595" Width="1000"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid x:Name="grid1">
        <StackPanel Orientation="Vertical" Margin="5">
            <StackPanel Orientation="Horizontal" Background="AliceBlue" Margin="5">
                <Button x:Name="btStart3" Content="Throw the ball" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Click="btStart3_Click"></Button>
                <TextBlock x:Name="Points" Margin="5"></TextBlock>
            </StackPanel>
            <Canvas x:Name="Canva" Width="500" Height="500"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Background="BlueViolet" >
                
            </Canvas>
        </StackPanel>
        
    </Grid>
</Window>
